<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/import_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#47B3A8"/>

    <Button
        android:id="@+id/import_atuo_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/auto_scan"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/import_btn_bg"/>

    <Button
        android:id="@+id/import_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/import_atuo_scan"
        android:layout_marginTop="20dp"
        android:text="@string/choose"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@drawable/import_btn_bg"/>

</RelativeLayout>